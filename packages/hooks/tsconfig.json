{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "noEmit": false,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "jsx": "react-jsx",
    "paths": {
      "@react-jopau/utils": ["../utils/dist"],
      "@react-jopau/shared/*": ["../shared/dist/*"],
      "@react-jopau/styles/*": ["../styles/dist/*"],
      "@react-jopau/components/*": ["../components/dist/*"]
    }
  },
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.stories.tsx"]
}
