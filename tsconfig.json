{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "typings/*.d.ts", "packages/**/*.d.ts"],
    "paths": {
      "@apps/example": ["apps/example/src/App.tsx"],
      "@react-jopau/utils": ["packages/utils/src"],
      "@react-jopau/shared/*": ["packages/shared/src/*"],
      "@react-jopau/styles/*": ["packages/styles/src/*"],
      "@react-jopau/hooks": ["packages/hooks/src"],
      "@react-jopau/components/*": ["packages/components/src/*"]
    },
    "types": ["node", "react", "jest", "mdx"]
  },
  "exclude": ["node_modules", "__tests__", "**/*.test.tsx", "**/*.test.ts"]
}
