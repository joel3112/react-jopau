{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "typings/**/*.d.ts"],
    "paths": {
      "@react-jopau/styles/*": ["packages/styles/src/*"],
      "@react-jopau/utils/*": ["packages/utils/src/*"],
      "@react-jopau/hooks/*": ["packages/hooks/src/*"],
      "@react-jopau/components/*": ["packages/components/src/*"]
    },
    "types": ["node", "react", "jest", "mdx"]
  },
  "exclude": ["node_modules", "__tests__", "**/*.test.tsx"]
}
