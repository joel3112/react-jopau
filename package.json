    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@stitches/react": "^1.2.8",
    "classnames": "^2.3.2",
    "lodash": "4.17.21",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "react-icons": "^4.6.0"
  }
}
