{
  "name": "@react-jopau/root",
  "version": "0.0.0",
  "description": "Monorepo of common functionality for React projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joel3112/react-jopau.git"
  },
  "author": "Joel Paucarima Franco <jopau3112@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/joel3112/react-jopau#readme",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --sort --concurrency 1",
    "clean": "lerna clean --yes && rimraf node_modules yarn.lock",
    "docs": "yarn run docs:components && yarn run docs:functions",
    "docs:components": "node scripts/docs-components",
    "docs:functions": "node scripts/docs-functions",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,scss,md,mdx,json,yml}' --config ./.prettierrc.json",
    "lint": "eslint .",
    "publish": "lerna publish --yes",
    "test": "lerna run test --stream --concurrency 1",
    "type-check": "tsc --pretty --noEmit",
    "storybook": "yarn run docs && start-storybook -p 6006 --no-open",
    "build-storybook": "build-storybook -o ./dist/storybook -c .storybook"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
